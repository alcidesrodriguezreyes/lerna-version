{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "git-skip": "git update-index --skip-worktree -- $(git ls-files)",
    "version:pre": "npm run git-skip && lerna version --conventional-prerelease --preid test --no-changelog --yes",
    "publish": "lerna publish from-git --yes"
  },
  "dependencies": {},
  "devDependencies": {
    "lerna": "^8.2.1"
  }
}
